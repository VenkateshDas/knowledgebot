# ==========================================
# TELEGRAM BOT CONFIGURATION
# ==========================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# SQLite database path for bot data
DB_PATH=bot.db

# ==========================================
# AI/LLM CONFIGURATION
# ==========================================

# OpenRouter API Key for LLM and embeddings
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==========================================
# LIGHTRAG CONFIGURATION
# ==========================================

# LightRAG Mode: "false" for development (file storage), "true" for production (databases)
# Development: Uses local JSON files + NetworkX + NanoVectorDB (good for testing)
# Production: Uses Supabase (PostgreSQL + pgvector) + Neo4j Aura (graph database)
LIGHTRAG_PRODUCTION=false

# LightRAG Models
LIGHTRAG_LLM_MODEL=minimax/minimax-m2.1
LIGHTRAG_EMBEDDING_MODEL=openai/text-embedding-3-small

# LightRAG Search Settings
LIGHTRAG_DEFAULT_MODE=hybrid
LIGHTRAG_TOP_K=5

# Workspace for logical isolation (useful in shared databases)
LIGHTRAG_WORKSPACE=telegram_bot

# ==========================================
# DEVELOPMENT MODE (LIGHTRAG_PRODUCTION=false)
# ==========================================

# Directory for storing LightRAG data (JSON, GraphML files)
LIGHTRAG_WORKING_DIR=./lightrag_data

# ==========================================
# PRODUCTION MODE (LIGHTRAG_PRODUCTION=true)
# Zero-Cost Setup: Supabase Free + Neo4j Aura Free
# ==========================================

# PostgreSQL (Supabase Free Tier - 500MB)
# Get connection details from: https://supabase.com/dashboard
POSTGRES_HOST=db.xxxxxxxxxxxxx.supabase.co
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_supabase_password_here
POSTGRES_DATABASE=postgres
POSTGRES_MAX_CONNECTIONS=10

# Neo4j Aura Free (50K nodes, 1K writes/month)
# Create free instance at: https://neo4j.com/cloud/aura/
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ==========================================
# INDEXING WORKER CONFIGURATION
# ==========================================

# How often to check for new URLs to index (seconds)
INDEXING_POLL_INTERVAL=10

# Maximum URLs to process per batch
INDEXING_BATCH_SIZE=10

# ==========================================
# OPTIONAL: REDIS (for caching, not required for free tier)
# ==========================================

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
