# ==========================================
# TELEGRAM BOT CONFIGURATION
# ==========================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# SQLite database path for bot data
DB_PATH=bot.db

# ==========================================
# AI/LLM CONFIGURATION
# ==========================================

# OpenRouter API Key for LLM and embeddings
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default model for balanced responses
OPENROUTER_MODEL=minimax/minimax-m2.1

# Fast model for simple tasks (URL summaries, etc.)
FAST_MODEL=minimax/minimax-m2.1

# Powerful model for complex reasoning
POWERFUL_MODEL=anthropic/claude-3.5-sonnet

# Embedding model for vector search
EMBEDDING_MODEL=openai/text-embedding-3-small

# ==========================================
# WEB SERVICES (Optional)
# ==========================================

# Firecrawl API Key for web scraping (fallback: Jina Reader)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Parallel AI API Key for web search
PARALLEL_API_KEY=your_parallel_api_key_here

# ==========================================
# RETRIEVAL SETTINGS
# ==========================================

# Number of results to return from knowledge base
RETRIEVAL_TOP_K=5

# BM25 (keyword) vs Vector (semantic) search weights
BM25_WEIGHT=0.4
VECTOR_WEIGHT=0.6

# ==========================================
# SEMANTIC CACHE SETTINGS
# ==========================================

# Similarity threshold for cache hits (0.92 = very similar)
CACHE_SIMILARITY_THRESHOLD=0.92

# Maximum cache entries per topic
CACHE_MAX_ENTRIES=1000

# Cache TTL in hours
CACHE_TTL_HOURS=24

# ==========================================
# INDEXING WORKER CONFIGURATION
# ==========================================

# How often to check for new URLs to index (seconds)
INDEXING_POLL_INTERVAL=10

# Maximum URLs to process per batch
INDEXING_BATCH_SIZE=10

# ==========================================
# SCRAPE CACHE
# ==========================================

# Maximum in-memory cache entries for scraped content
SCRAPE_CACHE_MAX_SIZE=100
